{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.oracle/oci-vault",
  "description": "MCP server for Oracle Cloud Infrastructure Vault - manage secrets, credentials, and sensitive data with secure authentication and audit logging",
  "repository": {
    "url": "https://github.com/oracle/mcp",
    "source": "github"
  },
  "version": "1.0.0",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "oracle.oci-vault-mcp-server",
      "version": "1.0.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "OCI CLI configuration profile name",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "OCI_CONFIG_PROFILE",
          "default": "DEFAULT"
        },
        {
          "description": "OCID of the OCI Vault to use as default",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "OCI_VAULT_ID"
        },
        {
          "description": "OCID of the OCI Compartment containing the vault",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "OCI_COMPARTMENT_ID"
        },
        {
          "description": "FastMCP logging level (DEBUG, INFO, ERROR)",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "FASTMCP_LOG_LEVEL",
          "default": "ERROR"
        }
      ]
    }
  ]
}
